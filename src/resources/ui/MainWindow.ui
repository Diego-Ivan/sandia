<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <menu id="action_menu">
    <section>
      <item>
        <attribute name="label" translatable="true">_About Sandia</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <template class="SandiaMainWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">566</property>
    <child>
      <object class="AdwToastOverlay" id="toast_overlay">
        <property name="child">
          <object class="AdwLeaflet" id="leaflet">
            <property name="width-request">366</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="hexpand">false</property>
                <child>
                  <object class="AdwHeaderBar">
                    <property name="show-end-title-buttons" bind-source="leaflet" bind-property="folded" bind-flags="sync-create"/>
                    <property name="title-widget">
                      <object class="GtkLabel">
                        <property name="label" translatable="true">Your Lists</property>
                        <style>
                          <class name="title"/>
                        </style>
                      </object>
                    </property>
                    <child type="end">
                      <object class="GtkMenuButton">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="menu-model">action_menu</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkStackSidebar">
                        <property name="stack">main_stack</property>
                        <property name="vexpand">true</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox" id="sidebar_list"></object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwLeafletPage">
                <property name="navigatable">false</property>
                <property name="child">
                  <object class="GtkSeparator"></object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="main_view">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property>
                <child>
                  <object class="AdwHeaderBar">
                    <property name="title-widget">
                      <object class="GtkLabel">
                        <property name="label">Sandia</property>
                        <style>
                          <class name="title"/>
                        </style>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkStack" id="main_stack">
                    <property name="transition-type">crossfade</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">view-number-1</property>
                        <property name="title">Business Management</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <child>
                              <object class="GtkLabel">
                                <property name="label">Woohooooooo</property>
                                <style>
                                  <class name="large-title"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">view-number-2</property>
                        <property name="title">ESS</property>
                        <property name="child">
                          <object class="AdwPreferencesPage">
                            <property name="hexpand">true</property>
                            <property name="vexpand">true</property>
                            <child>
                              <object class="AdwPreferencesGroup">
                                <property name="hexpand">true</property>
                                <property name="title">This is a Preferences Group</property>
                                <property name="description">Some useful description over here</property>
                                <child>
                                  <object class="GtkEntry"></object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>